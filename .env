# Absolute path to your existing Drupal checkout on the HOST
DRUPAL_HOST_PATH=/var/www/miraweb2024

# Where to persist MySQL data on the HOST
MYSQL_DATA_DIR=./data/mysql

# Map host user into the composer container so it writes as YOU, not root
HOST_UID=1000
HOST_GID=1000

# Optional: composer cache on host (fast, and safe to gitignore)
COMPOSER_CACHE_DIR=./data/composer-cache

